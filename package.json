{
  "name": "window-snapper-resizer",
  "version": "1.0.0",
  "description": "Window Snapper & Resizer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "repository": "https://github.com/devail1/electron-quick-start",
  "keywords": [
    "Window",
    "snapper",
    "resizer",
    "helper"
  ],
  "author": "devail1",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^22.11.7",
    "electron": "^29.2.0"
  },
  "build": {
    "productName": "Window Snapper & Resizer",
    "icon": "resources/icons/icon.png",
    "win": {
      "target": [
        "portable"
      ]
    },
    "files": [
      "**/*",
      "!**/node_modules/**",
      "!**/.git/**",
      "!package*.json"
    ],
    "extraFiles": [
      "./resources/**/*"
    ]
  }
}
